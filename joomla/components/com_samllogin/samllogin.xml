<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
	<name>SOS - SAML IDp Login</name>
	<creationDate>August 2019</creationDate>
	<author>Matteo Bonacini - Scuola Online Service</author>
	<authorEmail>matteo.bonacini@soluzionifutura.com</authorEmail>
	<version>1.0.0</version>
	<description>Gestisce richieste di autenticazione SAML inviate da SimpleSAMLphp</description>

  <install>
    <sql>
      <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
    </sql>
  </install>
  <uninstall>
    <sql>
      <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
    </sql>
  </uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>index.html</filename>
		<filename>samllogin.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
	</files>

	<administration>
		<menu link='index.php?option=com_samllogin'>SOS Users</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>samllogin.php</filename>
			<folder>sql</folder>
    </files>
	</administration>
</extension>
